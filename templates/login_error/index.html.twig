{% extends 'base.html.twig' %}

{% block title %}Hello LoginErrorController!{% endblock %}

{% block body %}
<style>
    .error-template {padding: 40px 15px;text-align: center;}
    .error-actions {margin-top:15px;margin-bottom:15px;}
    .error-actions .btn { margin-right:10px; }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="error-template">
                <h1>Login Failed!</h1>
                <div class="error-details">
                    Sorry, you are not a valid user. Please sign out from the current google account and try again with the new one!
                </div>
                <div class="error-actions">
                    <a href="{{ path('app_login') }}" class="btn btn-primary btn-lg"><span class="glyphicon glyphicon-home"></span>
                        Try Again </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
